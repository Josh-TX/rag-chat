{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Fastify (tsx)",
            "runtimeExecutable": "tsx",
            "runtimeArgs": [
                "watch",
                "--inspect",
                "${workspaceFolder}/src/server.ts"
            ],
            "console": "integratedTerminal",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "sourceMaps": true,
            "smartStep": true,
            "envFile": "${workspaceFolder}/.env"
        }
    ]
}